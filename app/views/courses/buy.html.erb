<h1>購買課程</h1>

<%= form_for(@order, url: course_orders_path(@course)) do |form| %>
  <div class="fields">
    <%= form.label :recipient %>
    <%= form.text_field :recipient %>
  </div>
  <div class="fields">
    <%= form.label :address %>
    <%= form.text_field :address %>
  </div>
  <%= form.submit %>
<% end %>
